{
    "hospital_name": "MockHospital",
    "mipmap":{
        "dbproperties": "/opt/DataFactory/dbproperties",
        "preprocess": {
            "root":"/opt/DataFactory/preprocess_step"
        },            
        "capture": {
            "root": "/opt/DataFactory/capture_step"
        },
        "harmonize": {
            "root": "/opt/DataFactory/harmonize_step"
        },
        "imaging": {
            "root": "/opt/DataFactory/imaging_step",
            "mapping": {
                "input_files": ["volumes.csv", "mri_visits.csv"],
                "processed_files" : ["volumes_df.csv"]
            }
        },
        "input_folders":{
            "ehr":"/data/DataFactory/EHR/input",
            "imaging":"/data/DataFactory/imaging/"
        }
    },
    "sql_scripts_folder":"/opt/DataFactory/export_step",
    "flatening":{
        "export_csv_name": "harmonized_clinical_data.csv",
        "output_folder": "/data/DataFactory/output/",
        "strategy":{
            "simple":"pivot_i2b2_MinDate_NEW19_a.sql",
            "6months": "pivot_i2b2_6_months_MRI_Diag.sql"
        }
    },
    "anonymization":{
        "anonymized_csv_name": "harmonized_clinical_anon_data.csv",
        "anonymization_sql": "anonymize_db_ides.sql",
        "strategy":{
            "simple": "pivot_i2b2_MinDate_NEW19_a_fed.sql",
            "6months": "pivot_i2b2_6_months_MRI_Diag_fed.sql"
        },
        "output_folder": "/data/DataFactory/anonymized_output/"
    },
    "db_docker":{
        "container_name": "demo_postgres",
        "postgres_user": "postgres",
        "postgres_pwd": "1234",
        "postgres_port": "5432",
        "capture_db": "i2b2_capture",
        "harmonize_db": "i2b2_harmonized",
        "mipmap_db": "mipmap",
        "anonymized_db": "i2b2_anonymized"
    },
    "mri":{
        "input_folders": {
            "nifti": {
                "raw" : "/data/DataFactory/anonymized_output/",
                "root": "/data/DataFactory/MRI/input/nifti/"
            },
            "dicom": {
                "raw": "/data/DataFactory/MRI/input/raw/dicom",
                "root": "/data/DataFactory/MRI/input/dicom"
            }
        },
        "output_folders": {
            "spm12" : "/data/DataFactory/MRI/output/spm12"
        }
    }
}
